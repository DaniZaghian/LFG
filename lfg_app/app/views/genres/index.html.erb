<div class="jumbotron genres">
  <div class = "jumbotron-text">GENRES</div>
  <button class="mdl-button  mdl-button--fab" data-toggle="modal" data-target="#new-genre-modal">+
</button></a>
</div>

<input class="mdl-textfield__input name-search" type="text" name="sample"id="fixed-header-drawer-exp">


<% @genres.each do |genre| %>
	<div class = "card-container" id = "<%=genre.name%>">
		<div class="demo-card-square mdl-card mdl-shadow--2dp">
		  <div class="mdl-card__title mdl-card--expand">
		    <h2 class="mdl-card__title-text"><%= genre.name %></h2>
		  </div>	

	  <div class="mdl-card__actions mdl-card--border">
	    <a href = "<%= genre_path(genre.slug)%>" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
	      View Genre
	    </a>
	  </div>
	</div>
  </div>
<% end %>



<div id="new-genre-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
      </div>
      <div class="modal-body">
        <%= form_for @genre, class: "form-horizontal" do |f| %>
   			<fieldset>
   				<legend>New Genre</legend>

			<div class="form-group">
			    <%= f.label :name , class: "col-lg-3 control-label" %>
			    <div class="col-lg-9">
			    	<%= f.text_field :name, class: "form-control mdl-textfield__input" %>
			    </div>
			</div><br><br>
		    
      </div>
      <div class="modal-footer">

        <%= f.submit "Create", class: "btn btn-primary" %>
        </fieldset>
		<% end %>
      </div>
    </div>
  </div>
</div>

<a href="#top" class="btt mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
	Back to Top
<i class="material-icons">expand_less</i></a>






